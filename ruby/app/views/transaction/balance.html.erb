<% provide(:title, 'My Accounts') %>
<div id="accountsList">
  <% @accounts.sort_by(&:name).each do |account| %>
      <ul data-inset="true" data-role="listview" data-theme="d" class="ui-listview ui-listview-inset ui-corner-all ui-shadow">
        <li class="ui-btn ui-btn-icon-right ui-li ui-corner-top ui-btn-up-d" data-role="list-divider" data-corners="false" data-shadow="false" data-iconshadow="true" data-wrapperels="div" data-icon="arrow-r" data-iconpos="right" data-theme="e">
          <div class="ui-li ui-corner-top">
            <div class="ui-btn-text">
              <h4 style="color: #261c02;text-shadow: 0 -1px 0 #fff;"><%= account.name.upcase %> ACCOUNT
                (...<%= account.number.match(/(.{0,#{4}}$)/) %>)</h4>
            </div>
          </div>
        </li>
        <li data-corners="false" data-shadow="false" data-iconshadow="true" data-wrapperels="div" data-icon="arrow-r" data-iconpos="right" data-theme="d" class="ui-btn ui-btn-icon-right ui-li ui-btn-up-d">
          <%= link_to transactions_url(account), :class => 'ui-btn-inner ui-li' do %>
              <div class="ui-btn-text">
                <div class="ui-grid-a">
                  <div class="ui-block-a">
                    <h3 class="ui-li-heading">Available balance</h3>

                    <div class="ui-li-desc" style="color: #7f8c8d;">See activity</div>
                  </div>
                  <div class="ui-block-b">
                    <h3 class="ui-li-heading" style="float: right;padding-right: 20px;color: #176da6;margin-top: 15px;font-size: 20px;">$<%= account.balance %></h3>
                  </div>
                </div>
              </div>
          <% end %>
        </li>
      </ul>
  <% end %>
</div>
