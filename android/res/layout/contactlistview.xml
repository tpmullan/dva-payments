<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corners" >

    <TextView
        android:id="@+id/nothingimportant1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Name: " />

    <TextView
        android:id="@+id/nothingimportant2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/contacts_email_textview"
        android:layout_alignBottom="@+id/contacts_email_textview"
        android:layout_alignParentLeft="true"
        android:text="Email: " />

    <TextView
        android:id="@+id/contacts_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/nothingimportant1"
        android:text="Loading...." />

    <TextView
        android:id="@+id/contacts_email_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/contacts_name_textview"
        android:layout_below="@+id/contacts_name_textview"
        android:text="Loading...." />

</RelativeLayout>
